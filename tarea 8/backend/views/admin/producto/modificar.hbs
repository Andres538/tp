<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo producto</h4>
            <form action="/admin/producto/modificar" method="post" enctype="multipart/form-data"> 
                <input type="hidden" value="{{producto.id_p}}" name="id_p">
                <div class="mb-3 row">
                    <input type="text" class="form-control" value="{{producto.nombre_p}}" name="nombre_p">
                </div>
                <div class="mb-3 row">
                    <input type="number" class="form-control" value="{{producto.precio}}" name="precio">
                </div>
                <div class="mb-3 row"><input  type="number" class="form-control" value="{{producto.cantidades}}" name="cantidades"></div>
                <div class="mb-3 row">
                    <label for="categoria">Categoria:</label>
                    <select id="id_categoria" name="id_categoria">
                        {{#each categoria}}  
                        <option value="{{id_c}}">{{nombre_c}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3 row">
                    <label for="Marca">Marca:</label>
                    <select id="id_marca" name="id_marca">
                      {{#each marca}}  
                        <option value="{{id_m}}">{{nombre_m}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label>Imagen:</label><input type="file" name="imagen" id="imagen">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}