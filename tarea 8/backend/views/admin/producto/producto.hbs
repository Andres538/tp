<div class="container" style="margin-top:50px;">
<div class="row">   
<p>Hola {{usuario}}!</p>
<a href="/admin/login/logout">cerrar </a></div>
<div class="row"><div class="col-7"><h3>Lista de Productos</h3></div>
<div class="col-5 text-end">
    <a class="btn btn-success" href="/admin/producto/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>   
</div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Cantidades</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Ingreso</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                    <tr>
                        <th scope="row">{{producto.id_p}}</th>
                        <td>{{producto.nombre_p}}</td>
                        <td>{{producto.precio}}</td>
                        <td>{{producto.nombre_m}}</td>
                        <td>{{producto.nombre_c}}</td>
                        <td>{{producto.cantidades}}</td>
                        <td>{{{imagen}}}</td>
                        <td>{{producto.ingreso}}</td>
                        <td class="text-center">
                            <a href="/admin/producto/modificar/{{producto.id_p}}" title="Editar" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i>Editar</a>
                            <a href="/admin/producto/eliminar/{{producto.id_p}}" title="Eliminar" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i>Eliminar</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
 </div>