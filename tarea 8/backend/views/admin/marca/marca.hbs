<div class="container" style="margin-top:50px;">
<div class="row">   
<p>Hola {{usuario}}!</p>
<a href="/admin/login/logout">cerrar </a></div>
<div class="row"><div class="col-7"><h3>Lista de Marcas</h3></div>
<div class="col-5 text-end">
    <a class="btn btn-success" href="/admin/marca/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>   
</div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Marca</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                    <tr>
                        <th scope="row">{{id_m}}</th>
                        <td>{{nombre_m}}</td>
                        <td class="text-center">
                            <a href="/admin/marca/modificar/{{id_m}}" title="Editar" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i>Editar</a>
                            <a href="/admin/marca/eliminar/{{id_m}}" title="Eliminar" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i>Eliminar</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
 </div>