<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Marca</h4>
            <form action="/admin/marca/modificar/" method="post">
                <input type="hidden" value="{{marca.id_m}}" name="id_m">
                <div class="mb-3 row">
                    <input type="text" class="form-control" value="{{marca.nombre_m}}" name="nombre_m">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}