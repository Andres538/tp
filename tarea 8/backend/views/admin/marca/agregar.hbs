<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva marca</h4>
            <form action="/admin/marca/agregar" method="post">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre_m">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}