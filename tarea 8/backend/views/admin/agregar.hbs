<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo cliente</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre_cl">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Mail" name="mail">
                </div>
                <div class="mb-3 row"><input  type="text" class="form-control" placeholder="Contraseña" name="contraseña"></div>
                <div class="mb-3 row">
                    <input type="number"  class="form-control" placeholder="Telefono" name="telefono">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Direccion" name="direccion">
                </div>
                <div class="mb-3 row">
                    <input type="number" class="form-control" placeholder="numero de tarjeta" name="numero_de_tarjeta">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}